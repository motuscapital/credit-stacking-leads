{
  "openapi": "3.1.0",
  "info": {
    "title": "Credit Stacking Lead API",
    "description": "API for submitting credit report leads",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "YOUR_RAILWAY_URL_HERE"
    }
  ],
  "paths": {
    "/webhook/gpt-credit-report": {
      "post": {
        "operationId": "submitCreditReportLead",
        "summary": "Submit a lead who has shared their credit report",
        "description": "Call this when a user provides their credit report information. This adds them to the CRM for follow-up.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email"],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "The user's email address"
                  },
                  "name": {
                    "type": "string",
                    "description": "The user's full name"
                  },
                  "phone": {
                    "type": "string",
                    "description": "The user's phone number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Lead successfully added",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
